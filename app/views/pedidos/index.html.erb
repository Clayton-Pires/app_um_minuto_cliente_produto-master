      <tr>
            <th>Cliente</th>
            <th>Produto</th>
            <th>Valor total</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%- @pedidos.each do |pedido| %>
